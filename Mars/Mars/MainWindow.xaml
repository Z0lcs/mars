<Window x:Class="Vadász_Mars_Dénes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mars Vadász - Rover Térkép" Height="750" Width="700" Background="#2C2C2C">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock x:Name="StatText" Text="Térkép betöltése..." Foreground="White" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#555" BorderThickness="2" CornerRadius="3">
            <ItemsControl x:Name="MapDisplay">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="50" Columns="50"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Width="12" Height="12" Fill="{Binding Color}" 
                                   ToolTip="{Binding Coordinates}" Margin="0.2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Window>